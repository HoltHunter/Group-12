{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
        {
            "files": ["*"],
            "rules": {
                "no-tabs": "off",
                "react/prop-types": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent" : ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "quotes": ["error", "double"],
        "semi": ["error", "never"]
    }
}
